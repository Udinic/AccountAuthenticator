<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udinic.accounts_authenticator_example.authentication"
    android:versionCode="1"
    android:versionName="1.0">

    <!-- *** Not really needed here, but convenient for copying to other apps that will use this module *** -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <application
        android:icon="@drawable/ic_udinic"
        android:label="@string/app_name">

        <!-- *** Not really needed here, but convenient for copying to other apps that will use this module *** -->
        <activity
            android:name=".AuthenticatorActivity"
            android:label="@string/login_label" />

        <activity
            android:name=".SignUpActivity"
            android:label="@string/signup_title" />

        <service android:name=".UdinicAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

    </application>
</manifest>
